%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et
{sys, [
       {lib_dirs, ["../deps"]},
       {rel, "tiger", "0.0.1",
        [
         kernel,
         stdlib,
         sasl,
         public_key,
         ssl,
         crypto,
         runtime_tools,
         tiger_core,
         tiger_kv,
         zab_engine,
         lager,
	 erlcron,
         cowboy
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "tiger"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, tiger_kv, [{incl_cond, include}]},
       {app, zab_engine, [{incl_cond, include}]},
       {app, tiger_core, [{incl_cond, include}]},
       {app, cowboy, [{incl_cond, include}]},
       {app, erlcron, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]}

      ]}.


{target_dir, "tiger"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/proposal"},
           {mkdir, "log"},
           {mkdir, "data/memcached"},
           {mkdir, "data/redis"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {template, "files/tiger", "bin/tiger"},
           {template, "files/tiger-admin", "bin/tiger-admin"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/redis.conf", "etc/redis.conf"}
          ]}.

